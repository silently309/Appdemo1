<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_listview"
    android:layout_marginTop="5dp"
    >
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/img_airport"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@id/rl1"
        android:layout_toStartOf="@id/rl4"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/txt_airportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000"
            android:text="Ten San Bay"/>
        <TextView
            android:id="@+id/txt_loungeName"
            android:layout_below="@+id/txt_airportName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="#777"
            android:text="Ten Phong Cho"/>
        <TextView
            android:id="@+id/txt_dayStart"
            android:layout_below="@+id/txt_loungeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginTop="5dp"
            android:textColor="#777"
            android:text="Ngay Bat Dau"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/txt_price"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:text="Gia Tien"
            android:textAlignment="textEnd"
            android:paddingEnd="15dp"
            android:background="@drawable/flight_rectangle"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl3"
        android:layout_alignParentEnd="true">
        <TextView
            android:id="@+id/txt_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:text="15 Guest"
            android:layout_marginStart="10dp"
        />
        <Button
            android:id="@+id/btn_sendrequest"
            android:layout_below="@id/txt_guest"
            android:layout_width="110dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/flight_send_btn"
            android:textAlignment="center"
            android:text="Send Request"
            android:textSize="10sp"
            />
    </RelativeLayout>
</RelativeLayout>